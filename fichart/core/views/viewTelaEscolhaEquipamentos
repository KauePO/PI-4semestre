from django.contrib.auth.mixins import LoginRequiredMixin
from django.views import View
from django.http import HttpResponse
from django.shortcuts import render, redirect
from ..forms import nomeForm
from core.models import Arma, Armadura, TipoArmadura, ConjuntoEquipamento, EquipamentoAventura, Ferramenta,



class viewTelaEquipamentos(LoginRequiredMixin, View):
    def get(self, request):
        
        classeAtual = request.COOKIES.get("classe")
        print(classeAtual)
        armaObjects = Arma.objects.all()

        tipo_armaduraobjects = TipoArmadura.objects.all()


        armaduraObjects = Armadura.objects.all().filter(classe__nome = classeAtual)
        listaArmaduras = {
                        "Leves":tipo_armaduraobjects.filter(nome_tipo_armadura = 'leve'),
                        "Medias":tipo_armaduraobjects.filter(nome_tipo_armadura = 'media'),
                        "Pesadas":tipo_armaduraobjects.filter(nome_tipo_armadura = 'pesada'),
        }

        
        
        conjuntoEquipamentoObjects = ConjuntoEquipamento.objects.all().filter(classes__nome = classeAtual)

        equipamentoDeAventuraObjects = EquipamentoDeAventura.objects.all().filter(classes__nome = classeAtual)
        
        ferramentaObjects = ferramenta.objects.all().filter(classes__nome = classeAtual)
        
        form = nomeForm()
        
        return render(request, "templateEscolhaEquipamentos.html", {"form":form, "armaObjects":armaObjects, 'armaduraObjects':listaArmaduras,"conjuntoEquipamentoObjects":conjuntoEquipamentoObjects, "equipamentoDeAventuraObjects":equipamentoDeAventuraObjects, "ferramentasobjects":ferramentaObjects})